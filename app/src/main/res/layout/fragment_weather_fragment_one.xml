<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sun.abby.cst2335_finalproject.WeatherFragmentOne"
    android:id="@+id/pageviewfragment1"
    android:background="@android:color/holo_blue_bright"
    android:text="Outside_Weather">


    <TextView
        android:text="Ottawa, CA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/location"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp"
        android:typeface="monospace"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastupdate"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold|italic"
        android:textSize="14sp"
        android:typeface="monospace"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:minWidth="80dp"
        android:id="@+id/progressBar"
        android:visibility="visible"

        android:layout_below="@+id/detail"
        android:layout_toEndOf="@+id/location"
        android:layout_marginStart="18dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/detail"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:typeface="monospace"
        android:textSize="18sp"
        android:layout_below="@+id/weather_image"
        android:layout_alignStart="@+id/lastupdate"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_image"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/lastupdate"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperature"
        android:textStyle="normal|bold"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
